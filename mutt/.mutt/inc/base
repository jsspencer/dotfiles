# -*- Mode: muttrc -*-

# Caches
set header_cache='~/.cache/mutt
# I promise to be good if in return mailboxes change faster...
set maildir_header_cache_verify=no

# Automatic viewing html
auto_view text/html
alternative_order text/plain text/enriched text/html

# Sync and check intervals
set read_inc = 100
set mail_check = 90
set timeout = 15

# Futher config
set tmpdir=~/.mutt/tmp
set mailcap_path=~/.mutt/mailcap
set abort_nosubject = ask-yes
set abort_unmodified = yes
set delete = ask-yes
set editor = vim
set content_type = 'text/plain'
set mark_old = no
#set sort = threads
#set sort_aux = reverse-last-date-received
set pager_index_lines = 15
set menu_scroll = yes

# Change faster
set sleep_time=0


# editing
set fast_reply = yes
set include = yes

# start at the end...
folder-hook . exec last-entry
# delete temporary copies of attachments
folder-hook . `rm -f /tmp/mutt/attachments/*`
